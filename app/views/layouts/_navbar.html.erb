<header class="navbar">
  <% if user_signed_in? %>
    <div class="navbar__brand">
      <%= link_to current_company.name, quotes_path %>
    </div>
    <div class="navbar__name">
      <%= current_user.name %>
    </div>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete,
                  class: "btn btn--dark" %>
  <% else %>
    <div class="navbar__brand">
      <%= link_to "Quotes App", root_path %>
    </div>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn--dark navbar__right" %>
  <% end %>
</header>
